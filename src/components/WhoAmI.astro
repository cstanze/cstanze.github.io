---
import { Image } from "astro:assets";
import jules from "../assets/jules.jpg";
import NodeLayout from "../layouts/NodeLayout.astro";
---

<NodeLayout>
  <div class="flex flex-row justify-around items-center gap-4">
    <Image
      alt="Jules posing at a railroad crossing."
      src={jules}
      loading="eager"
      class="w-24 rounded-2xl flex"
    />
    <div class="flex min-w-0.5 h-16 rounded-md bg-neutral-100"></div>
    <div class="flex flex-col items-start">
      <span class="text-4xl font-medium">Jules N.</span>
      <span class="font-medium text-md text-gray-400">Software Engineer</span>
    </div>
  </div>
</NodeLayout>
